<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Principal">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDmc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="DMC"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAnchor"
        android:layout_below="@+id/etDmc"
        android:layout_alignRight="@+id/etDmc"
        android:layout_alignEnd="@+id/etDmc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="ANCHOR" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar ANCHOR"
        android:id="@+id/btAlta"
        android:layout_below="@+id/etAnchor"
        android:onClick="buscarANCHOR"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvJugadores"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btAlta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar DCM"
        android:id="@+id/button"
        android:onClick="buscarDCM"
        android:layout_above="@+id/lvJugadores"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
